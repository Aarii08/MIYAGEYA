<div class="container">
  <div class="row">
    <div class="col-3">
			<%= render "layouts/prefecture", prefectures: @prefectures %>
    </div>

    <div class="col-8 offset-1 pt-5">
    	<div class="mb-3">
        <% if @review_people.present? %>
          <% @review_people.first(1).each do |review| %>
            <h2 class="text-center"><%= review.people_i18n %>　のレビューがついたミヤゲ一覧</h2>
          <% end %>
        <% else @review_usefulness.present? %>
          <% @review_usefulness.first(1).each do |review| %>
            <h2 class="text-center"><%= review.usefulness_i18n %>　のレビューがついたミヤゲ一覧</h2>
          <% end %>
        <% end %>
        <div class ="m-2 text-right">
          <%= link_to "戻る", root_path, class: "btn btn-outline-secondary" %>
        </div>
        <p class="text-right mt-5 mr-5">全 <%= @souvenirs.count %> 件</p>
      </div>

      <div class="row">
        <%= render "public/souvenirs/index", souvenirs: @souvenirs %>
	    </div>
    </div>

  </div>
</div>