<div class="container">
  <div class="row">
    <div class="col-3">
			<%= render "layouts/prefecture", prefectures: @prefectures %>
    </div>

    <div class="col-8 offset-1 pt-5">
    	<div class="mb-3">
    	  <% if params[:name] == "food" %>
    	    <h2 class="text-center">食品　のミヤゲ一覧</h2>
    	  <% else params[:name] == "goods" %>
    	    <h2 class="text-center">グッズ　のミヤゲ一覧</h2>
        <% end %>
    	  <div class ="m-2 text-right">
          <%= link_to "戻る", 'javascript:history.back()', class: "btn btn-outline-secondary" %>
        </div>
        <p class="text-right mt-5 mr-5">全 <%= @souvenirs.count %> 件</p>
      </div>

      <div class="row">
        <%= render "public/souvenirs/index", souvenirs: @souvenirs %>
	    </div>
    </div>

  </div>
</div>