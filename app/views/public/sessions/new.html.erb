<div class="container">
  <div class="row">
    <div class="col-11 col-lg-8 offset-lg-1 pt-5 mx-auto">
      <div class="mb-5">
        <%= link_to "TOPに戻る", root_path, class: "btn btn-outline-dark" %>
      </div>
      <h2 class="mb-5 text-center font-weight-bold border-bottom">ログイン</h2>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="mb-3">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
        <div class="text-center mt-4 mb-5">
          <%= f.submit "ログイン", class: "btn btn-success px-5" %>
        </div>
      <% end %>

      <div class="mt-5">
        <h5 class="border-bottom">まだ登録していない方</h5>
        <%= link_to "こちら", new_user_registration_path, class: "m-3 btn btn-outline-secondary" %>から新規登録してください。
      </div>
    </div>
  </div>
</div>
