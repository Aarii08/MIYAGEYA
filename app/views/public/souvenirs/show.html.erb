<div class="container">
  <div class="row">
    <div class="col-3">

    </div>

    <div class="col-8 offset-1 pt-5">
      <h2 class="text-center"><%= @souvenir.souvenir_name %>の詳細</h2>
      <div class="text-center m-3">
        <% if user_signed_in? %>
          <%= link_to "レビューする",  new_souvenir_review_path(@souvenir), class: "btn btn-outline-success mr-5" %>
          <% if @souvenir.wanted_by?(current_user) %>
            <%= link_to "ほしい！をやめる", souvenir_wants_path(@souvenir), method: :delete, class: "btn btn-outline-info mr-5" %>
          <% else %>
            <%= link_to "ほしい！", souvenir_wants_path(@souvenir), method: :post, class: "btn btn-outline-warning mr-5" %>
          <% end %>
        <% end %>
        <%= link_to "戻る", souvenirs_path, class: "btn btn-outline-secondary" %>
      </div>
      <div class="row mt-5">
        <div class="col-4">
          <%= image_tag @souvenir.get_image.variant( resize: "250x250")  %>
        </div>
        <div class="col-8">
          <table class="table table-border">
            <tbody>
              <tr>
                <td class="col-3 text-center">ミヤゲ名</td>
                <td><%= @souvenir.souvenir_name %></td>
              </tr>
              <tr>
                <td class="col-3 text-center">県名</td>
                <td><%= @souvenir.prefecture.prefecture_name %></td>
              </tr>
              <tr>
                <td class="col-3 text-center">紹介文</td>
                <td><%= safe_join(@souvenir.introduction.split("\n"),tag(:br)) %></td>
                <!--↑ viewに表示する際に、改行を反映させる記述　-->
              </tr>
              <tr>
                <td class="col-3 text-center">カテゴリー</td>
                <td><%= @souvenir.category_i18n %></td>
              </tr>
              <tr>
                <td class="col-3 text-center">ほしい！</td>
                <td><%= @souvenir.wants.count %>件</td>
              </tr>
              <tr>
                <td class="col-3 text-center">平均評価</td>
                <td>⭐️⭐️⭐️☆☆</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="text-right m-3">
        レビュー：全 <%= @souvenir.reviews.count %>件
      </div>
      <div class="col-11 mx-auto m-3">
        <% @souvenir.reviews.each do |review| %>
        <%= link_to souvenir_review_path(@souvenir, review) do %>
        <div class="card mt-3 border-secondary btn btn-outline-secondary">
          <h5 class="card-header"><%= review.user.nickname %>　　在住県名：<%= review.user.residence_prefecture %></h5>
          <div class="card-body">
            <p class="card-subtitle">貰った？贈った？自分用？　：　<%= review.receive_send %></p>
            <p class="card-subtitle">誰に？　：　相手タグ</p>
            <p class="card-subtitle">用途は？　：　目的タグ</p>
            <p class="card-text"><%= safe_join(review.review.split("\n"),tag(:br)) %></p>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>