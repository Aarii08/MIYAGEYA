<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "layouts/prefecture", prefectures: @prefectures %>
    </div>

    <div class="col-8 offset-1 pt-5">
      <h2 class="text-center"><%= @souvenir.souvenir_name %>の詳細</h2>
      <div class="m-3">
        <div class="d-flex justify-content-center">
          <% if user_signed_in? %>
            <%= link_to "レビューする",  new_souvenir_review_path(@souvenir), class: "btn btn-outline-success mr-5" %>
            <div id="want_btn_<%= @souvenir.id %>">
              <%= render "want", souvenir: @souvenir %></div>
            </div>
          <% end %>
          <%= link_to "戻る", souvenirs_path, class: "btn btn-outline-secondary float-right" %>
      </div>
      <div class="row mt-5">
        <div class="col-4">
          <% if @souvenir.rakuten_image_url.present? %>
            <img src="<%= @souvenir.rakuten_image_url %>", class="card-img-top width='30%' height='50%'">
          <% else %>
            <%= image_tag @souvenir.get_image.variant( resize: "250x250")  %>
          <% end %>
          <br>
          <% if @souvenir.rakuten_url.present? %>
            <a href="<%= @souvenir.rakuten_url %>">楽天の商品ページへ</a>
          <% end %>
        </div>
        <div class="col-8">
          <table class="table table-border">
            <tbody>
              <tr>
                <td class="col-3 text-center align-middle">ミヤゲ名</td>
                <td><%= @souvenir.souvenir_name %></td>
              </tr>
              <tr>
                <td class="col-3 text-center align-middle">県名</td>
                <td>
                  <% if @souvenir.prefecture.present? %>
                    <%= @souvenir.prefecture.prefecture_name %>
                  <% else %>
                    登録されていない都道府県
                  <% end %>
                </td>
              </tr>
              <tr>
                <td class="col-3 text-center align-middle">紹介文</td>
                <td><%= safe_join(@souvenir.introduction.split("\n"),tag(:br)) %></td>
                <!--↑ viewに表示する際に、改行を反映させる記述　-->
              </tr>
              <tr>
                <td class="col-3 text-center align-middle">カテゴリー</td>
                <td><%= @souvenir.category_i18n %></td>
              </tr>
              <tr>
                <td class="col-3 text-center align-middle">ほしい！</td>
                <td>
                  <div id="want_btn_count<%= @souvenir.id %>">
                    <%= render "wants_count", souvenir: @souvenir %></div>
                  </div>
                </td>
              </tr>
              <tr>
                <td class="col-3 text-center align-middle">タグ</td>
                <td class="d-flex flex-wrap">
                  <% uniq_tags = Array.new %>
                  <% @souvenir.reviews.each do |review| %>
                    <% review.tags.each do |tag| %>
                    <% unless uniq_tags.include?(tag) %>
                    <% uniq_tags.push(tag) %>
                      <%= link_to search_tags_path(tag_name: tag.tag_name) do %>
                      <span class="badge badge-primary text-light mr-2 mb-2">
                        <%= tag.tag_name %>
                      </span>
                      <% end %>
                      <% end %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
              </tr>
              <tr>
                <td class="col-3 text-center align-middle">平均評価</td>
                <td><%= render "average_star", souvenir: @souvenir %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

       <div class="text-right m-3">
        レビュー：全 <%= @souvenir.reviews.count %>件
      </div>

      <div class="col-12 mx-auto">
        <% @souvenir.reviews.each do |review| %>
          <%= link_to souvenir_review_path(@souvenir, review) do %>
            <div class="card border-secondary btn btn-outline-secondary text-left mb-3">
              <table class="table">
                <tr>
                  <th class="col-5 text-center align-middle mb-2">
                    <% if review.user.is_deleted == false %>
                      <h5 class="card-header"><%= review.user.nickname %> さん</h5>
                    <% else review.user.is_deleted == true %>
                      <h5 class="card-header">退会済みユーザー</h5>
                    <% end %>
                  </th>
                  <td class="col-6 align-middle mb-2">
                    <h6 class="card-header">在住県：&ensp;<%= review.user.residence_prefecture %>
                                   &emsp;&emsp;<%= review.created_at.strftime('%Y年%m月%d日') %>
                    </h6>
                  </td>
                </tr>
                <tr>
                  <td class="card-subtitle text-center">貰った？贈った？</td>
                  <td class="align-middle"><%= review.receive_send %></td>
                </tr>
                <tr>
                  <td class="card-subtitle text-center">誰に？</td>
                  <td class="align-middle"> <%= review.people_i18n %></td>
                </tr>
                <tr>
                  <td class="card-subtitle text-center">用途は？</td>
                  <td class="align-middle"><%= review.usefulness_i18n %></td>
                </tr>
                <tr>
                  <td class="card-subtitle text-center">レビュー</td>
                  <td class="align-middle"><%= safe_join(review.review.split("\n"),tag(:br)) %></p></td>
                </tr>
              </table>
            </div>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>
