<div class="container">
  <div class="row">
    <div class="col-10">
      <h2 class="text-center m-3"><%= @souvenir.souvenir_name %>編集</h2>
      <div class="text-right">
        <%= link_to "戻る", admin_souvenir_path, class: "btn btn-outline-secondary" %>
      </div>

      <%= form_with model: @souvenir, url: admin_souvenir_path do |f| %>
      <div class="col-12 m-3">
          <table class="table table-border">
            <tbody>
              <tr>
                <td class="col-3 text-center">ミヤゲ名</td>
                <td><%= f.text_field :souvenir_name, autofocus: true, class: "form-control" %></td>
              </tr>
              <tr>
                <td class="col-3 align-middle text-center">写真</td>
                <td><%= f.file_field :image, class: "form-control-image", accept: 'image/*' %>
                    <%= f.label :image, "※ 楽天で画像を取得した際には画像を選択する必要はありません。", class: "mt-3 font-weight-bold" %>
                </td>
              </tr>
              <tr>
                <td class="col-3 align-middle text-center">楽天で取得した画像</td>
                <td><%= f.text_field :rakuten_image_url,  class: "form-control" %></td>
              </tr>
              <tr>
                <td class="col-3 align-middle text-center">楽天ページへのURL</td>
                <td><%= f.text_field :rakuten_url,  class: "form-control" %></td>
              </tr>
              <tr>
                <td class="col-3 text-center">県名</td>
                <td><%= f.collection_select :prefecture_id, Prefecture.all, :id, :prefecture_name, {prompt: "選択してください"}, class: "form-control", :id => "prefecture_id" %></td>
              </tr>
              <tr>
                <td class="col-3 text-center">紹介文</td>
                <td><%= f.text_area :introduction, class: "form-control", rows: "4" %></td>
              </tr>
              <tr>
                <td class="col-3 text-center">カテゴリー</td>
                <td><%= f.radio_button :category, Souvenir.categories.key(0) %>
                    <%= f.label :category_food, "食品" %></br>
                    <%= f.radio_button :category, Souvenir.categories.key(1) %>
                    <%= f.label :category_goods, "グッズ" %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="d-flex justify-content-around ml-5">
        <%= f.submit "更新", class: "btn btn-success px-5" %>
        <%= link_to "削除する", admin_souvenir_path, method: :delete, "data-confirm" => "削除してもよろしいですか？", class: "btn btn-outline-danger" %>
        </div>
        <% end %>
    </div>
  </div>
</div>